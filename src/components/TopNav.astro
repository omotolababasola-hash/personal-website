---
// TopNav component - navigation bar with about me, resume, blog
---

<nav class="top-nav">
  <div class="nav-left">
    <a href="/" class="nav-link">home</a>
  </div>
  <ul class="nav-right">
    <li class="nav-item">
      <a href="#" class="nav-link" id="about-link">about me</a>
    </li>
    <li class="nav-item">
      <a href="/resume" class="nav-link">resume</a>
    </li>
    <li class="nav-item">
      <a href="#" class="nav-link" id="blog-link">blog</a>
    </li>
  </ul>
</nav>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .top-nav {
    position: fixed;
    top: 40px;
    left: 0;
    right: 0;
    z-index: 20;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40px;
  }

  .nav-left {
    display: flex;
  }

  .nav-right {
    display: flex;
    gap: 40px;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    color: white;
    text-decoration: none;
    font-size: 18px;
    font-weight: 400;
    font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
    transition: all 0.3s ease;
    display: block;
    text-transform: lowercase;
  }

  .nav-link:hover {
    opacity: 0.7;
    transform: translateY(-1px);
  }

  .nav-link:active {
    transform: translateY(0);
  }

  @media screen and (max-width: 768px) {
    .top-nav {
      top: 24px;
      padding: 0 24px;
    }

    .nav-right {
      gap: 24px;
    }

    .nav-link {
      font-size: 16px;
    }
  }

  @media screen and (max-width: 480px) {
    .top-nav {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .nav-right {
      flex-direction: column;
      gap: 16px;
      align-items: flex-start;
    }
  }
</style>

<script>
  // Handle about me link click
  const aboutLink = document.getElementById('about-link');
  
  if (aboutLink) {
    aboutLink.addEventListener('click', (e) => {
      e.preventDefault();
      const modal = document.getElementById('about-me-modal');
      const blogModal = document.getElementById('blog-modal');
      
      // Hide blog modal if it's open
      if (blogModal && blogModal.classList.contains('show')) {
        blogModal.classList.remove('show');
      }
      
      if (modal) {
        if (modal.classList.contains('show')) {
          // Hide the modal
          modal.classList.remove('show');
        } else {
          // Show the modal
          modal.classList.add('show');
        }
      }
    });
  }

  // Handle blog link click
  const blogLink = document.getElementById('blog-link');
  
  if (blogLink) {
    blogLink.addEventListener('click', (e) => {
      e.preventDefault();
      const modal = document.getElementById('blog-modal');
      const aboutModal = document.getElementById('about-me-modal');
      
      // Hide about modal if it's open
      if (aboutModal && aboutModal.classList.contains('show')) {
        aboutModal.classList.remove('show');
      }
      
      if (modal) {
        if (modal.classList.contains('show')) {
          // Hide the modal
          modal.classList.remove('show');
        } else {
          // Show the modal
          modal.classList.add('show');
        }
      }
    });
  }
</script>