<style>
  .footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 20;
    padding: 20px 40px;
    background: #141428;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .footer-left {
    display: flex;
    align-items: center;
  }

  .github-link {
    color: white;
    opacity: 0.8;
    transition: opacity 0.3s ease, transform 0.2s ease;
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .github-link:hover {
    opacity: 1;
    transform: translateY(-1px);
  }

  .github-link svg {
    width: 20px;
    height: 20px;
  }

  .footer-right {
    color: white;
    font-size: 14px;
    font-weight: 400;
    font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-right:hover {
    opacity: 1;
  }

  @media screen and (max-width: 768px) {
    .footer {
      padding: 16px 24px;
    }

    .footer-content {
      justify-content: space-between;
    }

    .footer-right {
      font-size: 12px;
    }

    .github-link svg {
      width: 18px;
      height: 18px;
    }
  }
</style>